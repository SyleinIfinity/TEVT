@model PhanVanKhanh_APP.Models.ThietBiViewModel
@{ ViewBag.Title = Model.TenThietBi; }

@section Styles {
    <link href="@Url.Content("~/Content/css/thietbi-detail.css")" rel="stylesheet" type="text/css" />
}

@if (Model != null)
{
    <h2>Chi tiết thiết bị</h2>
    <div class="detail-container">
        <div class="detail-image">
            <img src="@Url.Content("~/Content/images/" + (Model.HinhAnh ?? "no-image.png"))" alt="@Model.TenThietBi" />
        </div>
        <div class="detail-info">
            <h3>@Model.TenThietBi</h3>
            <h4>@string.Format("{0:N0}", Model.DonGia) VNĐ</h4>
            <p><strong>Mô tả:</strong></p>
            <div class="detail-description">@Html.Raw(Model.MoTa?.Replace("\n", "<br />"))</div>

            <div class="quantity-controls">
                <label for="soLuong">Số lượng:</label>
                <input type="number" name="soLuong" id="soLuong" value="1" min="1" class="quantity-input" />
                <button type="button" class="btn btn-success" onclick="alert('Tính năng chưa có');">Giỏ hàng</button>
            </div>
        </div>
    </div>
    <p>
        @Html.ActionLink("« Quay lại danh sách", "Index", new { maNhom = Model.MaNhom }, new { @class = "back-link" })
    </p>
}
else
{
    <h2>Không tìm thấy thiết bị</h2>
}